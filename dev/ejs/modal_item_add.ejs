<div class="modal fade" tabindex="-1" role="dialog" id="modal_form_add_item">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class="fa fa-close"></span></button>
        <h4 class="modal-title">Item Form Adding</h4>
      </div>
      <div class="modal-body">

        <form>
          <div class="form-group">
            <label for="item_url">Url for item resources</label>
            <input type="text" class="form-control" id="item_url" placeholder="item url" r-write="item rawurl">
          </div>
          <div class="form-group">
            <label for="item_full_desc" class="control-label">Full desk for item</label>
            <textarea class="form-control" rows="5" placeholder="full desk for item" r-write="item description"></textarea>
          </div>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" r-command="save_item">Save changes</button>
      </div>
    </div>
  </div>
</div>
